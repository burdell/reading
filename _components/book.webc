<div class="book">
  <img class="book-cover" :src="book.coverUrl" :alt="`${book.title} cover`" loading="lazy">
  <div>
    <div class="book-heading">
      <p class="date" @text="formatDate(book.dateRead)"></p>
      <rating :rating="book.rating"></rating>
    </div>
    <h3 class="title" @text="book.title"></h3>
    <p class="author" @text="book.author"></p>
  </div>
</div>